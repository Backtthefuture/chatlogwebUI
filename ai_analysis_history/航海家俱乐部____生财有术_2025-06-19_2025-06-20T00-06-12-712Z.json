           }\n                    },\n                    cutout: '50%'\n                }\n            });\n            \n            // 初始化Mermaid图表\n            mermaid.initialize({\n                startOnLoad: true,\n                theme: 'base',\n                themeVariables: {\n                    primaryColor: '#FFE8CC',\n                    nodeBorder: '#FF9A3D',\n                    lineColor: '#FF6B6B',\n                    textColor: '#5C4033'\n                }\n            });\n        });\n    </script>\n</body>\n</html>",
